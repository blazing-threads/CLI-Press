code.pressdown {
    background-color: #2E2C2B;
    border-color: #888;
    color: #8c857f;
}

pre.prettyprint p > code.pressdown,
pre.prettyprintplain p > code.pressdown{
    margin: 0;
    padding: 0;
}

pre.prettyprintplain code.pressdown {
    border: none;
}

.pressdown .pd-directive {
    color: #cb8ada;
    font-weight: bold;
}

.pressdown .pd-literal {
    color: #95C2E8;
    font-weight: bold;
}

.pressdown .pd-option {
    color: #D5DB95;
}

.pressdown .pd-pressdown {
    color: #DEDEDE;
}

