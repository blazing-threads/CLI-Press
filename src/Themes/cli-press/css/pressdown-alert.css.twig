div.pd-alert-box {
    border-top: 6px double #2e2c2b;
    border-bottom: 2px solid #AEAEAE;
    margin: 20px auto;
    page-break-inside: avoid;
    width: 80%;
}

i.pd-alert-icon {
    display: table-cell;
    padding: 20px 40px 20px 20px;
    vertical-align: middle;
}

div.pd-alert {
    display: table-cell;
    vertical-align: middle;
}