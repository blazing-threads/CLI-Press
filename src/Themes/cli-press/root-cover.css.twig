.cover {
    border: 1px solid {{ borderColorCover ?? borderColorAll }};
    height: 9in;
    width: 100%;
    margin: 0 auto;

    color: #333;
    font-family: {{ fontFamilyRootCover ?? fontFamilyRootCoverAll }};
    font-size: 12px;
    text-align: center;
}

.cover img.logo {
    content: url("{{ logoRootCover ?? logoAll }}");
    margin-top: 2in;
    max-width: 25%;
}

.cover .flourish {
    bottom: .25in;
    position: fixed;
    width: 100%;
}

.spacer {
    height: 2in;
}
