.header {
    border-bottom: {{ borderColorHeader ?? borderColorAll }} solid 1px;
    font-family: {{ fontFamilyHeader }};
    color: #999;
    font-size: 13px;
    font-weight: 400;
    height: 68px;
}

.header .logo {
    float: left;
}

.header .logo img {
    content: url("{{ logoHeader ?? logoAll }}");
    max-height: 38px;
}

.header .title-wrapper {
    margin: 18px 3px;
    text-align: right;
}

.header .title-wrapper .title {
    display: inline-block;
}

{% if headerEvenOdd %}
    .header.odd .logo {
        display: none;
    }

    .header.even .title-wrapper {
        display: none;
    }
{% endif %}

.spacer {
    height: 15px;
}