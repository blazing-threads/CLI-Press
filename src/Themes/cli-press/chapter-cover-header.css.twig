.header {
    border-bottom: {{ borderColorChapterCoverHeader ?? borderColorAll }} solid 1px;
    font-family: {{ fontFamilyChapterCoverHeader ?? fontFamilyChapterCoverAll }};
    color: #999;
    font-size: 13px;
    font-weight: 400;
    height: 68px;
}

.header .logo {
    float: left;
}

.header .logo img {
    content: url("{{ logoChapterCoverHeader ?? logoAll }}");
    height: 38px;
}

.header.odd .logo {
    display: none;
}

.header .title-wrapper {
    margin: 18px 3px;
    text-align: right;
}

.header.even .title-wrapper {
    display: none;
}

.header .title-wrapper .title {
    display: inline-block;
}