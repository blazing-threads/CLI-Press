body {
    background: #ffffff;
    color: #222222;
    font-size: 11pt;
    font-family: {{ fontFamilyBody }};
    line-height: 1.6 !important;
    padding: 5px 20px 20px 20px;
    -webkit-font-smoothing: antialiased;
}

a {
    color: {{ linkColorBody ?? linkColorAll }};
}

blockquote {
    border-left: 4px solid #e6e6e6;
    color: #777;
    font-size: 12px;
    margin: 1em 20px;
    padding: 0 15px;
}

blockquote > :first-child {
    margin-top: 0
}

blockquote > :last-child {
    margin-bottom: 0
}

blockquote cite:before {
    content: '\2014 \00A0'
}

pre > br:first-child {
    display: none;
}

caption,
caption a {
    color: #2e2c2b;
    font-weight: bold;
}

p > code,
li > code,
td > code,
h1 > code,
h2 > code,
h3 > code,
h4 > code,
h5 > code,
h6 > code,
blockquote > code {
    background-color: rgba(0, 0, 0, 0.02);
    border: 1px solid #efefef;
    font-family: {{ fontFamilyBlockQuoteCode }};
    font-size: 9pt;
    margin-left: 3px;
    margin-right: 3px;
    padding: 0.2em 0.5em;
}

pre > code {
    font-family: {{ fontFamilyCodeHighlighting }};
    font-size: 1em;
}

em.keyword1,
em.keyword2,
em.keyword3 {
    color: #4E5D84;
    font-size: .9em;
    font-weight: bold;
}

em.keyword2 {
    color: #cb8ada;
}

em.keyword3 {
    color: #D5DB95;
}

figcaption {
    background-color: #2e2c2b;
{% if figureCaptionAbove %}
    border-radius: 5px 5px 0 0;
    position: relative;
    top: 20px;
{% else %}
    border-radius: 0 0 5px 5px;
    position: relative;
    top: -20px;
{% endif %};
    color: #DEDEDE;
    font-size: 10pt;
    margin: 0 60px;
    padding: 10px 20px;
}

figcaption ~ h1,
figcaption ~ h2,
figcaption ~ h3,
figcaption ~ h4,
figcaption ~ h5,
figcaption ~ h6,
figcaption ~ p {
    margin-top: 0;
}

figure {
    background: #AEAEAE;
{% if figureCaptionAbove %}
    border-radius: 0 0 5px 5px;
{% else %}
    border-radius: 5px 5px 0 0;
{% endif %};
    clear: both;
    margin: 20px 60px;
    padding: 20px;
    page-break-inside: avoid;
}

figure p > code {
    background-color: #efefef;
}

figure p:first-of-type,
figure table:first-of-type {
    margin-top: 0;
}

figure.caption-less {
    border-radius: 5px;
}

figure code,
figure p {
    font-size: 9pt;
}

figure pre.prettyprint,
figure pre.prettyprintplain {
    margin: 10px 0;
}

figure p:last-of-type,
figure table:last-of-type {
    margin-bottom: 0;
}

h1 {
    font-size: 2.2em;
    font-weight: 700;
    line-height: 1.6;
    margin: 1.5em 0 1em
}

h2 {
    border-bottom: 1px solid #e6e6e6;
    font-size: 1.8em;
    font-weight: 700;
    line-height: 1.6;
    margin: 1.275em 0 .85em;
}

h3 {
    font-size: 1.6em;
    font-weight: 700;
    line-height: 1.6;
    margin: 1.125em 0 .75em
}

h4 {
    line-height: 1.6;
    font-size: 1.4em;
    font-weight: 700;
    margin: .99em 0 .66em
}

h5 {
    font-size: 1.2em;
    font-weight: 700;
    line-height: 1.6;
    margin: .855em 0 .57em
}

h6 {
    color: #777;
    font-size: 1em;
    font-weight: 700;
    line-height: 1.6;
    margin: .75em 0 .5em
}

h1 + p,
h1:first-child,
h2 + p,
h2:first-child,
h3 + p,
h3:first-child,
h4 + p,
h4:first-child,
h5 + p,
h5:first-child,
h6 + p,
h6:first-child {
    margin-top: 0 !important;
}

hr {
    border: 1px solid #ccc
}

li {
    display: list-item;
    line-height: 1.4em
}

ol {
    list-style-type: decimal
}

p {
    margin: 1em 0;
    word-wrap: break-word
}

pre.prettyprint,
pre.prettyprintplain {
    background-color: #2E2C2B;
    border-color: #888;
    clear: both;
    color: #DEDEDE;
    font-size: 9pt;
    margin-bottom: 30px;
    padding: 11px ! important;
}

pre p {
    margin: 0;
}

pre {
    font-size: 9pt;
    margin-bottom: 30px;
    padding: 10px ! important;
    word-break: break-all;
    word-wrap: break-word;
}

pre .pln {
    color: #DEDEDE;
}

pre .str {
    color: #D5DB95;
}

pre .kwd {
    color: #4E5D84;
}

pre .com {
    color: #7b726b;
}

pre .typ {
    color: #617FA0;
}

pre .lit {
    color: #95C2E8;
}

pre .pun,
pre .opn,
pre .clo {
    color: #DEDEDE;
}

pre .tag {
    color: #4E5D84;
}

pre .atn {
    color: #617FA0;
}

pre .atv {
    color: #95C2E8;
}

pre .dec,
pre .var {
    color: #D5DB95;
}

pre .fun {
    color: #4E5D84;
}

table {
    border: 1px solid #ccc;
    margin-top: 20px;
    page-break-inside: avoid;
}

table tr th,
table tr td {
    border: 1px solid #e6e6e6;
}

td, th {
    background-color: #fafafa;
    border: 1px solid #ccc;
    font-size: 9pt;
    padding: 5px;
}

th {
    background: #2e2c2b;
    color: #DEDEDE;
}

tfoot td, tfoot th {
    background: #AEAEAE;
    color: #222222;
}

.break {
    clear: both;
    display: block;
    page-break-after: always;
}

.screenshot {
    width: 100%;
}

.table-striped > tbody > tr:nth-of-type(odd) td {
    background-color: #f2f2f2;
}