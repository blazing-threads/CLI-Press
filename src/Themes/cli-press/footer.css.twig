body {
    margin: 0;
    padding-bottom: 20px;
}

.footer {
    border-bottom: {{ borderColorFooter ?? borderColorAll }} solid 1px;
    padding-bottom: 5px;
    position: relative;
}

.footer .page-wrapper {
    color: #999;
    font-family: {{ fontFamilyFooter }};
    font-size: 11px;
    font-weight: 300;
    text-align: center;
}

{% if footerEvenOdd %}
    .footer.even .page-wrapper {
        text-align: left;
    }

    .footer.odd .page-wrapper {
        text-align: right;
    }
{% endif %}

.footer .page-wrapper .page {
    display: inline-block;
}